<!Doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Home</title>
    <style>
        body{
          background-image: url("./background.jpeg");
          background-color: aquamarine;
          height:400px;
          background-position: center;
          background-size: cover; /*Background image will cover the whole page*/
          background-repeat: repeat;
        }
      </style>
      <script>
        function includeHTML() {
          var z, i, elmnt, file, xhttp;
          /*loop through a collection of all HTML elements:*/
          z = document.getElementsByTagName("*");
          for (i = 0; i < z.length; i++) {
            elmnt = z[i];
            /*search for elements with a certain attribute:*/
            file = elmnt.getAttribute("w3-include-html");
            if (file) {
              /*make an HTTP request using the attribute value as the file name:*/
              xhttp = new XMLHttpRequest();
              xhttp.onreadystatechange = function() {
                if (this.readyState == 4) {
                  if (this.status == 200) {elmnt.innerHTML = this.responseText;}
                  if (this.status == 404) {elmnt.innerHTML = "Page not found.";}
                  /*remove the attribute, and call this function once more:*/
                  elmnt.removeAttribute("w3-include-html");
                  includeHTML();
                }
              }      
              xhttp.open("GET", file, true);
              xhttp.send();
              /*exit the function:*/
              return;
            }
          }
        };
        </script>
    </head>
    <body>
      <div w3-include-html="header_teach.html"></div> <!--header for navbar-->
      <script>
        includeHTML();
        </script>
    	<div class=container>
    	<div class=row>
            <table class="table table-striped table-dark">
                <thead>
                  <tr> <th  scope="col">Student ID</th>  <th scope="row"> <%=teacher.teacher_id %> </th></tr>
                  <tr>  <th  scope="col">First Name</th>  <td ><%= teacher.teacher_f_name %></td></tr>
                  <tr>  <th  scope="col">Last Name</th> <td ><%= teacher.teacher_l_name %></td></tr>
                  <tr>  <th scope="col">Email</th> <td ><%= teacher.teacher_email %></td></tr>
                  <tr>  <th  scope="col">Password</th> <td ><%= teacher.teacher_pass %></td></tr>
                  <tr>  <th scope="col">Phone number</th> <td ><%= teacher.teacher_phone_num %></td></tr>
                  </thead>
                  <tbody>
              </tbody>
            </table>
            <form action="/update_teacher" method="POST">
              <input type="text" name="teacher_id" style="display: none;"value="<%= teacher.teacher_id %>">
              <button class='btn btn-primary' type="submit">Update</button>
          </form>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
